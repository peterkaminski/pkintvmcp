{
  "name": "pkintvmcp",
  "version": "0.1.0",
  "private": true,
  "description": "MCP server for CP-1600/Intellivision debugging",
  "author": "Peter Kaminski",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "toolchain:bootstrap": "bash tools/bootstrap-sdk1600.sh",
    "as1600": "bash tools/as1600",
    "bin2rom": "bash tools/bin2rom",
    "cli:hello": "node packages/cli/dist/run-example.js examples/01-hello-world/hello.bin",
    "cli:run": "node packages/cli/dist/run-example.js",
    "mcp:start": "node packages/mcp-cpu/dist/index.js"
  },
  "devDependencies": {
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
